@model List<UserInfo>
@{
 ViewBag.Title = "Participant List";
}

<main class="text-center">
    
<h1 class="h4">Meeting Participant List</h1>
<table class="table table-border">
    <thead>
    <tr>
        <td>Name</td>
        <td>Status</td>
        <td>Details</td>
    </tr>
    </thead>
    <tbody>
    @{ int i = 0; }
    @foreach (var user in Model)
    {
        if (user.WillAttend == true)
            i++;
        
        var status = user.WillAttend == true ? "Attending" : "Not Attending";
        var classname = user.WillAttend == true ? "table-success" : "table-danger";

        <tr class="@classname">
            <td>@user.Name</td>
            <td>@status</td>
            <td>
                <a href="/meeting/details/@user.Id" class="btn btn-sm btn-primary">Details</a>
            </td>
        </tr>
    }

    </tbody>
</table>
<div class="card">
    <div class="card-body">
        <span>@i people attending</span>
    </div>
</div>

</main>
