@model UserInfo
@{
ViewBag.Title = "Apply";
}


<h1 class="h4 text-center">Meeting Participation Form</h1>
<form action="" method="post" novalidate>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">E-Mail</label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="WillAttend" class="form-label">Meeting Attendance Status</label>
        <select asp-for="WillAttend" class="form-select">
            <option value="true">Yes, I will attend</option>
            <option value="false">No, I wont attend</option>
        </select>
    </div>
    <button class="btn btn-primary" type="submit">Send</button>
</form>